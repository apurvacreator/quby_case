{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "es5", "es6"],
    "module": "commonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["server", "client/src/**/*"]
}
